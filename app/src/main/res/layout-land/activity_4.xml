<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_back_a4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="321dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="67dp"
        android:text="@string/button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stars_ico" />

    <ImageView
        android:id="@+id/male_ico"
        android:layout_width="117dp"
        android:layout_height="188dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toEndOf="@+id/female_ico"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man_icon" />

    <ImageView
        android:id="@+id/female_ico"
        android:layout_width="113dp"
        android:layout_height="188dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/female_icon" />

    <ImageView
        android:id="@+id/stars_ico"
        android:layout_width="204dp"
        android:layout_height="104dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toEndOf="@+id/male_ico"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/five_star" />

    <ImageView
        android:id="@+id/act4_ico"
        android:layout_width="134dp"
        android:layout_height="140dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stars_ico"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_main" />

</androidx.constraintlayout.widget.ConstraintLayout>